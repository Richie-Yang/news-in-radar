<div id="news-list" class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
  {{#each news}}
  <div class="col p-2">
    <a href="{{this.url}}" target="_blank" class="text-decoration-none">
      <div class="card d-flex flex-column justify-content-between">

        <div class="card-img-top" style="background-image: url('{{this.urlToImage}}');"></div>
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">{{this.title}}</h5>
          <code>喜歡總數: {{this.totalLikes}}</code>
          <code>評論總數: {{this.totalComments}}</code>
          <p class="card-text">{{this.description}}</p>
        </div>

        <div class="card-footer d-flex">
          <a href="" class="btn btn-info me-2">評論</a>
          <form action="">
            <button class="btn btn-primary me-2">喜歡</button>
          </form>
          <form action="">
            <button class="btn btn-danger">討厭</button>
          </form>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>
