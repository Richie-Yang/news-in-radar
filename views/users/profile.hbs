<div id="profile" class="d-flex flex-column flex-md-row justify-content-center rounded">
  <div class="m-2 p-2 rounded profile-first-layer">
    <div id="profile-image" class="mx-auto">
      <img src="https://www.venmond.com/demo/vendroid/img/avatar/big.jpg" alt="profile-image" class="w-100">
    </div>

    <hr>

    <div class="text-center">
      <h3>{{user.name}}</h3>
      <h6><a href="mailto://{{user.email}}">{{user.email}}</a></h6>
      <h6><a href="/users/{{user.id}}/edit">編輯</a></h6>
    </div>

    <hr>

    <ul class="list-group list-group-flush news-text">
      <li class="list-group-item profile-second-layer">總評論數量: 0</li>
      <li class="list-group-item profile-second-layer">被點讚數量: 0</li>
      <li class="list-group-item profile-second-layer">追隨者數量: 0</li>
      <li class="list-group-item profile-second-layer">被追隨數量: 0</li>
    </ul>
    <hr>

  </div>

  <br>

  <div class="d-flex flex-column p-2 w-100">
    <div class="card profile-first-layer">
      <div class="card-header">
        <span>最近已喜愛過的新聞</span>
      </div>
      <div class="card-body d-flex flex-wrap p-2 profile-second-layer rounded-bottom">
        {{#each user.LikedNewsForUsers}}
        <a href="/news/{{this.id}}"><img class="liked-news" src="{{this.urlToImage}}" alt=""></a>
        {{/each}}
      </div>
    </div>
    
    <br>

    <div class="card profile-first-layer">
      <div class="card-header">
        <span>最近已評論過的新聞</span>
      </div>
      <div class="card-body d-flex flex-wrap p-2 profile-second-layer rounded-bottom">
        {{#each user.Comments}}
        <a href="/news/{{this.newsId}}"><img class="liked-news" src="{{this.News.urlToImage}}" alt=""></a>
        {{/each}}
      </div>
    </div>

    <br>
    
    <div class="card profile-first-layer">
      <div class="card-header">
        <span>最受歡迎的前三個評論</span>
      </div>
      <div class="card-body p-2 profile-second-layer rounded-bottom">
        {{#each comments}}
          <a href="/news/{{this.newsId}}" class="text-decoration-none p-2">

            <div class="d-md-none align-items-center">
              <strong>{{this.News.title}}</strong>
              <div class="d-flex align-items-center my-3">
                <img class="liked-news me-3" src="{{this.News.urlToImage}}" alt="">
                <p>留言內容: {{this.content}}</p>
              </div>  
              <strong>喜歡總數: {{this.totalLikes}}</strong>
              <p class="m-0">commented at {{fromNow this.updatedAt}}</p>
            </div>

            <div class="d-none d-md-flex flex-md-row align-items-center">
              <img class="liked-news me-3" src="{{this.News.urlToImage}}" alt="">
              <div class="flex-grow-1">
                <strong>{{this.News.title}}</strong>
                <p>留言內容: {{this.content}}</p>
                <div class="d-flex justify-content-between">
                  <strong>喜歡總數: {{this.totalLikes}}</strong>
                  <p class="m-0 align-self-center">commented at {{fromNow this.updatedAt}}</p>
                </div>
              </div>
            </div>

          </a>
          <hr>
        {{/each}}
      </div>
    </div>

  </div>
</div>

