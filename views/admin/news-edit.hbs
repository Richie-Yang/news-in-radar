<h3>編輯新聞</h3>

<form class="p-3 bg-light" action="/admin/news/{{news.id}}?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">標題</label>
    <input type="text" class="form-control" id="title" name="title" value="{{news.title}}">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">描述</label>
    <textarea class="form-control" name="description" id="description" cols="30" rows="10">
      {{news.description}}
    </textarea>
  </div>

  <div class="mb-3">
    <label for="author" class="form-label">出處</label>
    <input type="text" class="form-control" id="author" name="author" value="{{news.author}}">
  </div>

  <div class="mb-3">
    <label for="url" class="form-label">URL</label>
    <input type="url" class="form-control" id="url" name="url" value="{{news.url}}">
  </div>

  <div class="mb-3">
    <label for="urlToImage" class="form-label">圖片 URL</label>
    <input type="url" class="form-control" id="urlToImage" name="urlToImage" value="{{news.urlToImage}}">
  </div>

  <div class="mb-5">
    <label for="publishedAt" class="form-label">發佈時間</label>
    <input type="datetime-local" class="form-control" id="publishedAt" name="publishedAt">
  </div>

  <a href="/admin/news" class="btn btn-info">返回</a>
  <button type="submit" class="btn btn-primary">儲存</button>
</form>