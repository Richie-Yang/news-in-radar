<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item"><a class="page-link" href="{{pageRoute}}?page={{pagination.prev}}">上一頁</a></li>
    {{#each pagination.pages}}
      {{#ifCond ../pagination.currentPage this}}
        <li class="page-item active"><a class="page-link" href="{{pageRoute}}?page={{this}}">{{this}}</a></li>
      {{else}}
        <li class="page-item"><a class="page-link" href="{{pageRoute}}?page={{this}}">{{this}}</a></li>
      {{/ifCond}}
    {{/each}}
    <li class="page-item"><a class="page-link" href="{{pageRoute}}?page={{pagination.next}}">下一頁</a></li>
  </ul>
</nav>